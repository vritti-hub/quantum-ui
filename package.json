    },
    "./ThemeToggle": {
      "types": "./dist/components/ThemeToggle/index.d.ts",
      "import": "./dist/components/ThemeToggle.js"
    },
    "./next": {
      "types": "./dist/next.d.ts",
      "import": "./dist/next.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc --project tsconfig.lib.json --emitDeclarationOnly && vite build",
