{
  "name": "@vritti/quantum-ui",
  "description": "A modern, TypeScript-first React component library built on Radix UI primitives and styled with Tailwind CSS v4. Fully typed, accessible, and tree-shakeable components including Button, Card, TextField, Typography, ThemeToggle, Checkbox, and PasswordField.",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "version": "0.1.9",
  "type": "module",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vritti-hub/quantum-ui.git"
  },
  "homepage": "https://vritti-hub.github.io/quantum-ui",
  "bugs": {
    "url": "https://github.com/vritti-hub/quantum-ui/issues"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "tailwind",
    "tailwindcss",
    "radix-ui",
    "typescript",
    "accessible",
    "tree-shakeable",
    "component-library"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./Button": {
      "types": "./dist/Button.d.ts",
      "import": "./dist/components/Button.js"
    },
    "./Card": {
      "types": "./dist/Card.d.ts",
      "import": "./dist/components/Card.js"
    },
    "./TextField": {
      "types": "./dist/TextField.d.ts",
      "import": "./dist/components/TextField.js"
    },
    "./Typography": {
      "types": "./dist/Typography.d.ts",
      "import": "./dist/components/Typography.js"
    },
    "./ThemeToggle": {
      "types": "./dist/ThemeToggle.d.ts",
      "import": "./dist/components/ThemeToggle.js"
    },
    "./Checkbox": {
      "types": "./dist/Checkbox.d.ts",
      "import": "./dist/components/Checkbox.js"
    },
    "./PasswordField": {
      "types": "./dist/PasswordField.d.ts",
      "import": "./dist/components/PasswordField.js"
    },
    "./PhoneField": {
      "types": "./dist/PhoneField.d.ts",
      "import": "./dist/components/PhoneField.js"
    },
    "./OTPField": {
      "types": "./dist/OTPField.d.ts",
      "import": "./dist/components/OTPField.js"
    },
    "./dist/assets/quantum-ui.css": "./dist/assets/quantum-ui.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:js": "vite build",
    "build:types": "tsc --project tsconfig.lib.json --emitDeclarationOnly",
    "build:watch": "npm run build:types && vite build --watch",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build-storybook:github": "NODE_ENV=production storybook build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@storybook/addon-docs": "9.1.7",
    "@storybook/addon-themes": "^9.1.8",
    "@storybook/react-vite": "9.1.7",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^22.18.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "ajv": "^8.17.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "9.1.7",
    "glob": "^11.0.2",
    "globals": "^16.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "storybook": "9.1.7",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.3.8",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^7.1.6",
    "vite-plugin-dts": "^4.5.4"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.544.0",
    "react-phone-number-input": "^3.4.12",
    "tailwind-merge": "^3.3.1"
  }
}
